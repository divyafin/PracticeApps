<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="3dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5CECE"
        >
    <TextView
        android:id="@+id/getcname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Course Name"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="italic" />




    <TextView
        android:id="@+id/getcdesp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Course Description"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_below="@+id/getcname"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/gettrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Course Track"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_below="@+id/getcdesp"
        android:textStyle="italic" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/gettrack"
            android:id="@+id/editcour"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/ic_baseline_edit_24"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/editcour"
            android:id="@+id/deletecour"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_delete_24"
            />
    <TextView
        android:id="@+id/getcduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gettrack"
        android:hint="Course Duration"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="italic" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>